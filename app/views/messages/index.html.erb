<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

   <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前</label>
    <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  <div class="form-group">
    <label for="body" class="col-sm-2 control-label">内容</label>
    <div class="col-sm-6">
        <%= f.text_area :body, class: "form-control" %>
    <!-- 以下省略 -->
     
     <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
 
<% end %>